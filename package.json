  "version": "0.0.3",
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "scripts": {
    "lint": "eslint .",
